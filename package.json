{
  "name": "react_sample_app",
  "version": "1.0.0",
  "description": "A sample React application",
  "author": "James Christie <jchristie@8thlight.com>",
  "repository": {
    "type": "git",
    "url": "TBD"
  },
  "scripts": {
    "browserify": "browserify src/react_sample.js | uglifyjs > public/js/react_sample.js",
